<resources>


    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/common_high_elevation</item>
        <item name="android:popupTheme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ToolbarTheme</item>
        <item name="android:background">@color/primary_color</item>
        <item name="background">@color/primary_color</item>
        <item name="elevation">@dimen/common_high_elevation</item>

    </style>


    <style name="MaterialRippleLayout">
        <item name="android:background">@color/common_transparent</item>
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">@color/primary_dark_color</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="NavDrawerItem" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:textColorSecondary">@color/primary_accent</item>
    </style>

    <style name="BoxCardView">
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin_top_bottom</item>
    </style>
</resources>
